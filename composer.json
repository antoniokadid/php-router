{
    "name": "antoniokadid/wappkit-core-http",
    "description": "A PHP library to receive and respond to HTTP requests.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio Kadid",
            "email": "antoniokadid@gmail.com",
            "homepage": "http://www.antoniokadid.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "antoniokadid/wappkit-core-text": "dev-master@dev",
        "antoniokadid/wappkit-core-collections": "dev-master@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\HTTP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\HTTP\\": "src/",
            "AntonioKadid\\WAPPKitCore\\Tests\\HTTP\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests"
    }
}
